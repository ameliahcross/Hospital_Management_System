@model List<HospitalApp.Core.Application.ViewModels.LabResult.SaveLabResultViewModel>

@{
    ViewData["Title"] = "Resultados";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">Resultados</h3>
    <hr />
    <div class="row">
        <div class="col">
            <div class="row mb-3">
                <div class="col text-end">
                    <a asp-controller="LabResult" asp-action="Create" class="btn btn-sm btn-success">
                        Nuevo <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
            <div>
                <div class="table-responsive">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            No se encontraron resultados
                        </div>
                    }
                    else
                    {
                        <table class="table table-success table-striped mx-auto">
                            <thead>
                                <tr>
                                    <th>Id Cita</th>
                                    <th>Paciente</th>
                                    <th>Prueba</th>
                                    <th>Estatus</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 1)
                                {
                                    <tr>
                                        <td>@Model[0].AppointmentId</td>
                                        <td>@Model[0].PatientName</td>
                                        <td>@Model[0].LabTestName</td>
                                        <td>@Model[0].Status</td>
                                        <td class="text-center">
                                            <a class="btn btn-success btn-sm me-1"
                                               href="@Url.Action("CompleteAppointment", "Appointment",new { appointmentId = Model[0].AppointmentId })">
                                                Completar cita
                                            </a>

                                            <a class="btn btn-danger btn-sm me-1" asp-controller="Appointment" asp-action="Index"
                                               asp-route-AppointmentId="@Model[0].AppointmentId">Cerrar resultados</a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AppointmentId</td>
                                            <td>@item.PatientName</td>
                                            <td>@item.LabTestName</td>
                                            <td>@item.Status</td>
                                            <td class="text-center">
                                                <a class="btn btn-success btn-sm me-1"
                                                   href="@Url.Action("CompleteAppointment", "Appointment",new { appointmentId = item.AppointmentId })">
                                                    Completar cita
                                                </a>

                                                <a class="btn btn-danger btn-sm me-1" asp-controller="Appointment" asp-action="Index"
                                                   asp-route-AppointmentId="@item.AppointmentId">Cerrar resultados</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
