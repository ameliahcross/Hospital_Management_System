@model List<HospitalApp.Core.Application.ViewModels.Doctor.DoctorViewModel>

@{
    ViewData["Title"] = "Doctores";
}

<div class="container mt-5">
    <h3 class="text-center mb-4">Doctores</h3>
    <hr />
    <div class="row">
        <div class="col">
            <div class="row mb-3">
                <div class="col text-end">
                    <a asp-controller="Doctor" asp-action="Create" class="btn btn-sm btn-success">
                        Nuevo <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
            <div>
                <div class="table-responsive">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            No se encontraron doctores
                        </div>
                    }
                    else
                    {
                        <table class="table table-success table-striped mx-auto">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Teléfono</th>
                                    <th>Cédula</th>
                                    <th>Foto</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.IdentificationNumber</td>
                                        <td>
                                            <img width="100px" src="@item.Photo" alt="Foto del Dr." class="img-fluid">
                                        </td>
                                        <td class="text-end">
                                            <a class="me-3" asp-controller="Doctor" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit text-black"></i>
                                            </a>
                                            <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fas fa-trash text-black"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
